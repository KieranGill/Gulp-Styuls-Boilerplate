// This file contains button style definitions and colours.
// BUTTON HELPER FUNCTIONS AND SILENT MIXINS

$button-base

	outline none
	position relative
	padding 10px 15px
	font-size 14px
	text-shadow 0 1px 1px rgba(0,0,0,0.1)
	text-decoration none
	text-align center
	cursor pointer
	border-radius 4px
	border 1px solid transparent
	overflow hidden
	box-shadow none
	display inline-block
	vertical-align bottom
	white-space nowrap
	user-select none
	transition all $var-animation-timer ease-out
	-webkit-font-smoothing antialiased
	-webkit-appearance none
	-webkit-tap-highlight-color transparent
	font-family $var-site-text
	&:active

		outline none

mix-button-colors(font-color, body-color)

	border-color body-color
	background-color body-color
	color font-color

	&:hover

		color font-color

		+above(m)

			background-color lighten(body-color, 15)
			border-color lighten(body-color, 15)

	&:active

		background-color darken(body-color, 10)
		border-color darken(body-color, 10)
		color font-color

	&:visited
	&:focus
		color font-color

$button-color-primary

	mix-button-colors($color-button-text, $color-button)

$button-color-secondary

	mix-button-colors($color-button-text, $color-button-secondary)

$button-color-alert

	mix-button-colors($color-button-text, $color-button-alert)

$button-color-disabled

	mix-button-colors($color-button-text, $color-button-disabled)

// BUTTON COLORS
// BUTTON DEFINITIONS
.button

	@extends $button-base
	@extends $button-color-primary

	&.secondary

		@extends $button-color-secondary

	&.alert

		@extends $button-color-alert

	&.disabled
	&[disabled]

		@extends $button-color-disabled
		cursor default
		
		&:hover
			//disabled buttons should probably not have a hover state so mixin here
			background-color: $color-button-disabled

	&.transparent

		border-color $color-button-transparent
		background-color $color-button-transparent
		color $color-button-transparent-text
		text-shadow 0 0 0 rgba(0,0,0,0)

	&.nav-buttons

		border-color white
		background-color $color-button-transparent
		color white
		text-shadow 0 0 0 rgba(0,0,0,0)
		width 46px
